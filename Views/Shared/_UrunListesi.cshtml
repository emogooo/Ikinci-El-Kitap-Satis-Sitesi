@using Kitap.Models;
@model IEnumerable<KitapModel>
<div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
    @foreach (var kitap in Model)
    {
        <div class="col mb-5">
            <div class="card h-100">
                <img class="card-img-top" src="@kitap.ResimUrl" alt="..." width="100px" height="200px" />
                <div class="card-body p-4">
                    <div class="text-center">
                        <h5 class="fw-bolder">@kitap.isim</h5>
                        <div class="d-flex justify-content-center small text-warning mb-2">
                            @for (int i = 0; i < kitap.KondisyonId; i++)
                            {
                                <div class="bi-star-fill"></div>}
                            @if (kitap.KondisyonId == 1)
                            {
                                <span class="badge badge-danger">@kitap.Kondisyon</span> }
                            else if (kitap.KondisyonId == 2)
                            {
                                <span class="badge badge-secondary">@kitap.Kondisyon</span> }
                            else if (kitap.KondisyonId == 3)
                            {
                                <span class="badge badge-info">@kitap.Kondisyon</span> }
                            else
                            {
                                <span class="badge badge-success">@kitap.Kondisyon</span>}
                        </div>
                        <t class="fw-light" style="font-size: 13px">@kitap.Yazar</t>
                        <br>
                        ₺@kitap.fiyat.ToString("0.00")
                    </div>
                </div>
                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                    <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="/Home/Detay/@kitap.Id">Ayrıntıları Gör</a></div>
                </div>
            </div>
        </div>
     }
</div>