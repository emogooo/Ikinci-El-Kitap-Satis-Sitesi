@model IEnumerable<Kitap.Entity.Kategori>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container pb-5">
    <h2>Kategori Listesi</h2>
    <hr />
    <p>
        @Html.ActionLink("Yeni Kategori", "Create", null, new { @class = "btn btn-primary" })
    </p>
    <hr />
    <table class="table table-bordered table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.isim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.aktif)
            </th>
            <th style="width: 20%"></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.isim)
                </td>
                <td>
                    @if (item.aktif)
                    {
                        <label>
                            <i> Evet </i>
                        </label>
                    }
                    else
                    {
                        <label>
                            <i> Hayır </i>
                        </label>
                    }
                </td>
                <td>
                    @Html.ActionLink("Güncelle", "Edit", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })
                </td>
            </tr>
        }

    </table>
</div>
